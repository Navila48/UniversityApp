@model UniversityApp.Models.DepartmentHira
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save Department</title>

    
    <style>
        
         .field-validation-error {
             color: red;
             font-style: italic;
         }
    </style>
   
</head>
<body>
<div>
    
        @using (Html.BeginForm("SaveDepartment", "DepartmentHira", FormMethod.Post))
{

    <fieldset>

        <legend>Save Department</legend>

        <table>
            <tr>
                <td>@Html.LabelFor(m => m.Code)</td>
                <td>@Html.TextBoxFor(m => m.Code)</td>
                <td>@Html.ValidationMessageFor(m => m.Code)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Name)</td>
                <td>@Html.TextBoxFor(m => m.Name)</td>
                <td>@Html.ValidationMessageFor(m => m.Name)</td>
            </tr>
            <tr>
                <td></td>

                <td>
                    <input type="submit" value="Save">

                </td>
            </tr>

        </table>

        
            <label> @ViewBag.department</label>
        

    </fieldset>
    
}
   
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
